<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="PERSISTENCE_UNIT" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <!-- Driver JDBC de SQLite -->
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <!-- URL de conexión a fichero SQLite (relativo o absoluto) -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:./data/datos.db"/>
            <!-- Dialecto específico de SQLite -->
            <property name="hibernate.dialect" value="org.sqlite.hibernate.dialect.SQLiteDialect"/>
            <!-- Generación/actualización automática de esquema -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- Mostrar SQL en consola -->
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>